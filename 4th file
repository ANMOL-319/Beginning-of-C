#include <stdio.h>
#include <math.h>
int main()
{
    int a = 4;
    int b = 8;

    printf("The value of a + b is %d\n", a + b);
    printf("The value of a - b is %d\n", a - b);
    printf("The value of a * b is %d\n", a * b);
    printf("The value of a / b is %d\n", a / b);

    int z;
    z = b * a; // Legal
    // b * a = z //Illegal

    printf("The value of z is %d\n", z);

    printf("5 when divided by 2 leaves remainder of %d\n", 5 % 2);
    printf("5 when divided by -2 leaves remainder of %d\n", 5 % -2); // result in sign is kept same as numerator

    /*Operators like '* / + - ' cannot be assumed and if it is assumed it won't return any value*/
    // printf ("The value of 4*5 is %d\n", (4)(5)); --> // This won't return value of 20/wrong
    printf("The value of 4*5 is %d\n", (4) * (5));

    // There is no operators to perform exponentiation in C
    printf("The value of 4^5 is %d\n", 4 ^ 5); // It will not produce result 4 to the power 5
    printf(" The value of 4 to the power 5 is %f\n", pow(4, 5));

    printf("The value of 4 + 5 is %d\n", 4 + 5);
    printf("The value of 4 + 5.6 is %f\n", 4 + 5.6);
    printf("The value of 4.1 + 5.6 is %f\n", 4.1 + 5.6);

    printf(" The value of 3.0/9 is %f\n", 3.0/9);
    return 0;
}
