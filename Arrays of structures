#include <stdio.h>
#include<string.h>
struct employee
{
    int code;
    float salary;
    char name[20];
};

int main() // NOTE: to store employee's name, we have to use '%s' integer and we are not allowed to do '&' in scan f while storing employee's name
{
    struct employee facebook[100]; 
    facebook[0].code = 100;
    facebook[0].salary = 100.45;
    strcpy(facebook[0].name, "Anmol");

     
    facebook[1].code = 101;
    facebook[1].salary = 100.45;
    strcpy(facebook[1].name, "Ronaldo");


    facebook[2].code = 102;
    facebook[2].salary = 102.45;
    strcpy(facebook[2].name, "Skillkhiladi");

    printf("Done.");
    return 0;}
